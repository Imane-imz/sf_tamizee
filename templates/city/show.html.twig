{% extends 'base.html.twig' %}

{% block title %}Villes{% endblock %}

{% block body %}

<div class="container p-5">
    <h1 class="text-center m-5">Ville</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>Frais de port</th>
                <td>{{ city.shippingFees }} €</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_city_index') }}">Retour à la liste</a> |

    <a class="text-success" href="{{ path('app_city_edit', {'id': city.id}) }}">Modifier</a>

    {{ include('city/_delete_form.html.twig') }}
</div>
    
{% endblock %}
