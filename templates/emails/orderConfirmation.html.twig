<style>
    html{
        padding: 50px;
    }

    table{
        width: 100%;
        border-collapse: collapse;
    }

    th, td{
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    thead{
        background: #f2f2f2;
    }

    tbody tr:nth-child(even){
        background: #f9f9f9;
    }

    h1{
        text-align: center;
        padding: 20px;
        font-size: 48px;
    }

    h4{
        text-align: right;
        padding: 15px;
        font-size: 24px;
    }

    h5{
        text-align: right;
        padding: 15px;
        font-size: 24px;
    }

    h6{
        text-align: left;
        padding: 2px;
        font-size: 18px;
    }
</style>      

<div class="container p-5">
    {# <img src="{{ logoPath }}" alt="Tamizée" style="width: 150px; height: auto;"> #}

    <h1 class="text-center m-5">Votre commande a été confirmée !</h1>
    <p class="text-center m-5">Voter commande est en cours de préparation</p>
    <hr>

    <div>
        <h2 class="text-center m-5">Récapitulatif de la commande</h2>
        <h4 class="text-end mb-5 mt-5">Date de la commande : {{ order.createdAt|date('d M Y') }}</h4>

        <h6 class="fw-bold mb-3">Détails de la commande</h6>
        <table class="table table-bordered mb-5">
            <thead>
                <tr>
                    <th>Nom du produit</th>
                    <th>Prix unitaire</th>
                    <th>Quantité</th>
                    <th>Prix total</th>
                </tr>
            </thead>
            {% for product in order.orderedProducts %}
                <tr>
                    <td>
                        <img src="{{ asset('uploads/images/'~product.product.image) }}" class="m-2" style="width: 70px; height: 70px; border-radius: 10%;" alt="{{ product.product.name }}">
                        {{ product.product.name }}
                    </td>
                    <td>{{ product.product.name }}</td>
                    <td>{{ product.product.price }} €</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.product.price * product.quantity }} €</td>
                </tr>
            {% endfor %}
        </table>
        <h5 class="text-end mb-5">Total de la commande : {{ order.totalPrice }} €</h5>
        <hr>
    </div>

</div>