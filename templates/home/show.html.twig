{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}

<div class="container p-5">

    <div class="card mb-12 p-4 mb-4">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="{{ product.image }}" alt="{{ product.name }}" class="img-fluid rounded">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h1 class="card-title">{{ product.name }}</h1>
              <p class="card-text">{{ product.description }}</p>
              <p class="card-text h4">{{ product.price }} €</p>
              <a href="{{ path('app_cart_new', {'id': product.id}) }}">Ajouter au panier</a>
            </div>
          </div>
        </div>
    </div>

    <h4 class="text-center">Vous pourriez aussi aimer...</h4>

    <div class="row">
        {% for product in products %}
    
            <div class="col-md-3 mt-4">
                <div class="card" style="width: 18rem;">
                    <a href="{{ path('app_product_page_show', {'id': product.id}) }}">
                        <img src="{{ product.image }}" alt="{{ product.name }}" class="card-img-top">
                    </a>
                    <div class="card-body">
                    <a class="product-title" href="{{ path('app_product_page_show', {'id': product.id}) }}">
                        <h5 class="card-title">{{ product.name }}</h5>
                    </a>
                    <p class="card-text h4">{{ product.price }} €</p>
                    <a href="{{ path('app_cart_new', {'id': product.id}) }}" class="btn btn-success">Ajouter au panier</a>
                    </div>
                </div>
            </div>
    
        {% endfor %}
    </div>

</div>



{% endblock %}
