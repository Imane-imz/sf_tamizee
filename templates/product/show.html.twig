{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="container p-5">
    <h1 class="text-center mt-5">Détails du produit :</h1>
    <h2 class="text-center mb-5">{{ product.name }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td class="h4">{{ product.price }}</td>
            </tr>
            <tr>
                <th>Image de couverture</th>
                <td><img src="{{ product.image }}" alt="{{ product.name }}" class="card-img-top" style="width: 150px; height: 150px"></td>
            </tr>
        </tbody>
    </table>

    <div>
        <a class="btn btn-primary text-white" href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier le produit</a>
    </div>

    {{ include('product/_delete_form.html.twig') }}

    <div class="mb-3" >
        <a class="text-success" href="{{ path('app_product_add_stock_history', {'id': product.id}) }}">Afficher l'historique des mouvements de stock</a>
    </div>

    <div>
        <a class="text-secondary" href="{{ path('app_product_index') }}">Retour à la liste des produits</a>
    </div>
</div>
{% endblock %}
